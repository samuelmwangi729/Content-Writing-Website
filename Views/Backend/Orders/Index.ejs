<%- include('../partials/header.ejs') %>
<body>
<%- include('../partials/sidebar.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <!-- content goes here  -->
            <div class="unix-login">
                <div class="container-fluid">
                    <div class="row text-center">
                        <div class="col-sm-8 col-sm-offset-2">
                            <div class="login-content">
                                <div class="login-form">
                                    <h4>Create An Order</h4>
                                    <form id="orderForm">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Title</label>
                                                    <input type="text" class="form-control" name="title" placeholder="What do you want done?">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Category</label>
                                                    <select name="Category" id="Category" class="form-control">
                                                        <option label="--Select Category"></option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label>Description</label>
                                                    <textarea name="Description" id="" placeholder="Project Description"  rows="5" style="width: 100%;"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-groupt text-center">
                                                    <label>Project Type</label>
                                                    <div style="display:flex; justify-content: space-evenly; gap: 2;">
                                                        <div class="form-check ml-3">
                                                            <input class="form-check-input" type="radio" name="projectType" id="hourly">
                                                            <label class="form-check-label pl-5" for="hourly">
                                                              Hourly
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="projectType" id="contract" checked>
                                                            <label class="form-check-label" for="contract">
                                                             Contract
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                </div>
                                                <div class="col-sm-6 text-center">
                                                    <div class="form-group">
                                                        <label>Your Budget</label>
                                                        <input type="currency" class="form-control" name="Budget" placeholder="Amount in USD">
                                                    </div>
                                                </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Project File</label>
                                                    <input type="file" class="form-control" name="ProjectFile">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Deadline</label>
                                                    <input type="date" class="form-control" placeholder="Password">
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Post Project</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const form = document.querySelector('form#orderForm')
    form.addEventListener('submit',(e)=>{
        e.preventDefault()
        alert('form submitted')
    })
</script>
<%- include('../partials/scripts.ejs') %>
</body>

</html> 