<%- include('../partials/header.ejs') %>
<body>
<%- include('../partials/sidebar.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <!-- content goes here  -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <h4 class="text-center">Order Details</h4>
                            <div class="card-header-right-icon">
                                <ul>
                                    <li>
                                        <a class="btn btn-warning" href="/WithdrawOrder?orderID=<%= order?._id %>">Withdraw Order</a>
                                    </li>
                                    <li>
                                        <a class="btn btn-danger" href="/DeleteOrder?orderID=<%= order?._id %>">Delete Order</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="user-profile m-t-15">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="user-profile-name dib">Title <%= order.Title %></div>
                                        <div class="useful-icon dib pull-right">
                                        <div class="custom-tab user-profile-tab">
                                            <ul class="nav nav-tabs" role="tablist">
                                                <li role="presentation" class="active"><a href="#1" aria-controls="1" role="tab" data-toggle="tab">Details</a></li>
                                            </ul>
                                            <div class="tab-content">
                                                <div role="tabpanel" class="tab-pane active" id="1">
                                                    <div class="contact-information">
                                                        <div class="phone-content">
                                                            <span class="contact-title">Description:</span>
                                                            <span class="phone-number"><%= order.Description %></span>
                                                        </div>
                                                        <div class="website-content">
                                                            <span class="contact-title">Category:</span>
                                                            <span class="contact-website"><%= category %></span>
                                                        </div>
                                                        <div class="address-content">
                                                            <span class="contact-title">Project Type</span>
                                                            <span class="mail-address"><%= order.ProjectType %></span>
                                                        </div>
                                                        <div class="skype-content">
                                                            <span class="contact-title">Rate in USD</span>
                                                            <span class="contact-skype">$ <%= order.Budget %></span>
                                                        </div>
                                                        <div class="gender-content">
                                                            <span class="contact-title">Project Status</span>
                                                            <span class="gender"><%= order.Status %></span>
                                                        </div>
                                                        <div class="phone-content">
                                                            <span class="contact-title">Deadline</span>
                                                            <span class="phone-number">
                                                                <%= moment(order.SubmitBy).format('Do MMMM, YYYY')  %>  %>
                                                            </span>
                                                        </div>
                                                        <div class="phone-content">
                                                            <span class="contact-title">Uploaded Files</span>
                                                            <span class="phone-number">
                                                                <% if(order.ProjectFile){%>
                                                                    <% order.ProjectFile.forEach((item)=>{%>
                                                                        <div class="well well-sm">
                                                                            <a href="<%= ordersDir+'/OrderFiles/'+item %>" _target="parent"><%= item %></a><t></t>
                                                                        </div>
                                                                    <%})%>
                                                                <%}else{%>
                                                                    No Files Uploaded 
                                                                <%}%>
                                                            </span>
                                                        </div>
                                                        <div class="birthday-content">
                                                            <span class="contact-title">Awarded To</span>
                                                            <% if(order.Status === 'Awarded'){ %>
                                                                <span class="birth-date"><% order.AwardedTo %> </span>
                                                            <% }else{%>
                                                                <span class="birth-date badge badge-sm badge-primary">Not Yet Awarded </span>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
        </div>
    </div>
</div>
<%- include('../partials/scripts.ejs') %>
</body>

</html> 